@{
    ViewData["Title"] = "活動報告";
}
@model ReportViewModel

<!--説明文-->
<div class="text-center mb-3">
    <h2>活動報告提出</h2>
    <p>提出済みの公欠届に対する活動報告を提出します。以下の内容を記入してください。</p>
</div>

<!--ここら辺は提出済み公欠届から抽出したい-->
<!--公欠日-->
<div class="mb-3 row">
    <label class="col-sm-2 col-form-label">公欠日</label>
    <div class="col">
        <div class="form-control-plaintext" id=""></div>
    </div>
</div>
<!--欠席時限・科目名-->
<div class="mb-3 row">
    <label class="col-sm-2 col-form-label">欠席時限・科目名</label>
    <div class="col">
        <div class="form-control-plaintext" id=""></div>
    </div>
</div>
<!--活動内容-->
<div class="mb-3 row">
    <label class="col-sm-2 col-form-label">活動内容</label>
    <div class="col">
        <div class="form-control-plaintext" id=""></div>
    </div>
</div>
<!--企業名/主催者-->
<div class="mb-3 row">
    <label class="col-sm-2 col-form-label">企業名/主催者</label>
    <div class="col">
        <div class="form-control-plaintext" id=""></div>
    </div>
</div>

<!--活動報告フォーム-->
<form method="post">
    <!--提出書類-->
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">提出書類</label>
        <div class="col form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="Resume">
            <label class="form-check-label" asp-for="Resume">履歴書</label>
        </div>
        <div class="col form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="Score">
            <label class="form-check-label" asp-for="Score">成績証明書</label>
        </div>
        <div class="col form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="Graduation">
            <label class="form-check-label" asp-for="Graduation">卒業見込証明書</label>
        </div>
        <div class="col form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="Health">
            <label class="form-check-label" asp-for="Health">健康診断書</label>
        </div>
        <div class="col form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="Entry">
            <label class="form-check-label" asp-for="Entry">エントリーシート</label>
        </div>
        <div class="col form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="Recommend">
            <label class="form-check-label" asp-for="Recommend">推薦書</label>
        </div>
        <div class="col form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="Introduce">
            <label class="form-check-label" asp-for="Introduce">紹介状</label>
        </div>
        <div class="col form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="DocOthers">
            <label class="form-check-label" asp-for="DocOthers">その他</label>
        </div>
    </div>
    <!--訪問企業住所-->
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">訪問企業住所</label>
        <div class="col">
            <input type="text" class="col form-control" placeholder="入力してください" name="Address" required>
        </div>
    </div>
    <!--筆記試験-->
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">筆記試験</label>
        <div class="col form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="AptitudeTest">
            <label class="form-check-label" asp-for="AptitudeTest">適性テスト</label>
        </div>
        <div class="col form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="CommonSense">
            <label class="form-check-label" asp-for="CommonSense">一般常識</label>
        </div>
        <div class="col form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="Speciality">
            <label class="form-check-label" asp-for="Speciality">専門科目</label>
        </div>
        <div class="col form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="Essay">
            <label class="form-check-label" asp-for="Essay">作文・小論文</label>
        </div>
        <div class="col form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="TestOthers">
            <label class="form-check-label" asp-for="TestOthers">その他</label>
        </div>
    </div>
    <!--適性テスト-->
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">適性テスト(種類・内容)</label>
        <div class="col">
            <input type="text" class="form-control" style="height: 100px" placeholder="入力してください" name="AptitudeTestContent">
        </div>
    </div>
    <!--一般常識-->
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">一般常識(内容)</label>
        <div class="col">
            <input type="text" class="form-control" style="height: 100px" placeholder="入力してください" name="CommonSenseContent">
        </div>
    </div>
    <!--専門科目-->
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">専門科目(内容)</label>
        <div class="col">
            <input type="text" class="form-control" style="height: 100px" placeholder="入力してください" name="SpecialityContent">
        </div>
    </div>
    <!--作文・小論文-->
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">作文・小論文(課題名)</label>
        <div class="col">
            <input type="text" class="form-control" style="height: 100px" placeholder="入力してください" name="EssayContent">
        </div>
    </div>
    <!--面接試験-->
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">面接試験</label>
        <div class="col form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="Personal">
            <label class="form-check-label" asp-for="Personal">個人面接(面接官 人)</label>
        </div>
        <div class="col form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="Group">
            <label class="form-check-label" asp-for="Group">集団面接(面接官 人・1グループ 人)</label>
        </div>
    </div>
    <!--質問事項-->
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">面接試験(質問事項)</label>
        <div class="col">
            <input type="text" class="form-control" style="height: 100px" placeholder="入力してください" name="InterviewContent">
        </div>
    </div>
    <!--受験の感想(アドバイス等)-->
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">受験の感想(アドバイス等)</label>
        <div class="col">
            <input type="text" class="form-control" style="height: 100px" placeholder="入力してください" name="Advice" required>
        </div>
    </div>
    <!--入力内容確認ボタン-->
    <div class="d-grid col-2 mx-auto">
        <button class="btn btn-primary mb-3" type="submit" asp-controller="Report" asp-action="Check">入力内容を確認する</button>
    </div>
</form>