<!DOCTYPE html>
<html lang="ja">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Paperless Empire</title>
    <link rel="stylesheet" href="~/lib/Bootstrap5.0.2/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/Highlight.js/tokyo-night-dark.min.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/lib/Bootstrap-icons/bootstrap-icons.css" />
    <partial name="_Favicons" />
</head>

<body>
    <!-- ナビゲーションバー -->
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light border-bottom sticky-top">
            <a class="navbar-brand fs-4" asp-controller="Home" asp-action="Index"><img src="~/img/PE_Logo.png"
                    width="30" height="30" class="d-inline-block align-text-top rounded m-1">Paperless Empire</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="me-auto"></ul>
                <ul class="navbar-nav nav nav-pills">
                    <li class="nav-item"><a class="nav-link text-dark" href="https://github.com/hikaru8079/paperless-empire"><i class="bi bi-github"></i></a></li>
                    <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item"><a class="nav-link text-dark" href="/.auth/logout">logout</a></li>
                </ul>
            </div>
        </nav>
    </div>

    <!--ビュー描画-->
    <div class="container my-3">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!--フッター-->
    <div class="container mb-3">
        <footer class="d-flex border-top text-secondary">
            &copy; 2023 - Nippon Engineering Collage of Hachioji ｜ Development by IS14 ｜ Powered by <i class="bi bi-slack"></i> Slack , <i class="bi bi-google"></i> Google
        </footer>
    </div>

    <!--JS CDN-->
    <script src="~/lib/Bootstrap5.0.2/bootstrap.js"></script>
    <script src="~/lib/Vue.js/vue.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/Highlight.js/highlight.min.js"></script>
    <script>
        //highlight.js line number
        hljs.highlightAll();
        hljs.addPlugin({
            'after:highlightElement': ({ el, result }) => {
                el.innerHTML = result.value.replace(/^/gm, '<span class="row-number"></span>');
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>